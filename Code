#include <stdio.h>

void swap(int *a, int *b) {
    int t = *a;
    *a = *b;
    *b = t;
}

void heapify(int a[], int n, int i) {
    int l = 2 * i + 1;   // left child
    int r = 2 * i + 2;   // right child
    int big = i;

    if (l < n && a[l] > a[big])
        big = l;

    if (r < n && a[r] > a[big])
        big = r;

    if (big != i) {
        swap(&a[i], &a[big]);
        heapify(a, n, big);
    }
}

void buildHeap(int a[], int n) {
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(a, n, i);
}

void heapSort(int a[], int n) {
    buildHeap(a, n);
    for (int i = n - 1; i > 0; i--) {
        swap(&a[0], &a[i]);
        heapify(a, i, 0);
    }
}

void print(int a[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int main() {
    int n, a[50];

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("\nOriginal array: ");
    print(a, n);

    buildHeap(a, n);
    printf("Max Heap: ");
    print(a, n);

    heapSort(a, n);
    printf("Sorted array (Heap Sort): ");
    print(a, n);

    return 0;
}